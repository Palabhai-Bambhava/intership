@model AspNetCoreCrudDemo.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<div class="container mt-4">
    <h2 class="text-danger">Confirm Delete</h2>
    <p class="lead">Are you sure you want to delete this student?</p>

    <div class="card mt-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Course)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Course)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.EnrollmentDate)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EnrollmentDate)</dd>
            </dl>

            <form asp-action="Delete" class="mt-3">
                <input type="hidden" asp-for="StudentId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
            </form>
        </div>
    </div>
</div>
